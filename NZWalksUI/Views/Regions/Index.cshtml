@model IEnumerable<NZWalksUI.Models.DTO.RegionDTO>

@{
}
<h1 class="mt-3">Regions</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Code
            </th>
            <th>
                Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>
                    @region.Id
                </td>
                <td>
                    @region.Code
                </td>
                <td>
                    @region.Name
                </td>
                <td>
                    <a asp-asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
